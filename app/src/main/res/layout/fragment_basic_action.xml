<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:background="#FDCC41"
    >
    <TextView
        android:id="@+id/basicActionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/basic_action_spinner_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/basicActionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basicActionTitle"

        >

    </Spinner>


</RelativeLayout>